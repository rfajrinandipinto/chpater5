<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <section class="sidebar-primary">
      <div class="sp-row">
        <div class="sp-menu">
          <p class="sp-logo">B</p>
        </div>
        <div class="sp-menu">
          <img src="img/home-icon.svg" alt="" />
          <p>Dashboard</p>
        </div>
        <div class="sp-menu selected">
          <img src="img/car-icon.svg" alt="" />
          <p>Cars</p>
        </div>
      </div>
    </section>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img src="img/BCR.png" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item burger-button">
              <i class="bi bi-list"></i>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search" />
            <button class="btn" type="submit">Search</button>
          </form>
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item dropdown d-flex">
              <a href="#" class="profile-picture nav-link">R</a>
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> R Fajri N </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="main-div row">
      <section class="sidebar-secondary col-2">
        <p>Cars</p>
        <ul class="list-group">
          <li class="list-group-item"><a href="">List Car</a></li>
        </ul>
      </section>
      <section class="main-content col-10">
        <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item fw-bold"><a href="#">Cars</a></li>
            <li class="breadcrumb-item active" aria-current="page">List Cars</li>
          </ol>
        </nav>
        <div class="section-title d-flex">
          <h1>List Car</h1>
          <a href="/add-cars"><button><i class="bi bi-plus"></i>Add New Car</button></a>
        </div>
        <div class="section-categories d-flex">
          <button class="selected">All</button>
          <button>Small</button>
          <button>Medium</button>
          <button>Large</button>
        </div>
        <div class="list-card-container row gx-4">

          <% data.forEach(element=> { %>
          <div class="card-container col-4">
            <div class="card">
              <img src="<%= element.img %>" class="card-img-top" alt="..." />
              <div class="card-body">
                <p class="card-text car-name"><%= element.name %></p>
                <h5 class="card-title car-price"><%= element.rent %></h5>
                <p class="card-text car-update"><%= element.updated %></p>
                <div class="d-flex">
                  <a href="/delete-car/<%= element.id %>" class="btn btn-primary col delete-btn">Delete</a>
                  <a href="/edit-car/<%= element.id %>" class="btn btn-primary col edit-btn">Edit</a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
          
        </div>
      </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>
